## The title of this page can be overridden by setting the $title variable here to a resource string or the actual value
##set($title = "")

#define($_body)
    <form method="post">

        <div class="center">
            <h1>#message("authenticator.username-password-authenticator.forgot-account-id.view.head1")</h1>
            <p>#message("authenticator.username-password-authenticator.forgot-account-id.view.p1")</p>
        </div>

        <div class="form-field">
            <label class="$!_errorClass" for="primaryEmail">#message("authenticator.username-password-authenticator.forgot-account-id.view.email")</label>
            <input type="email" name="primaryEmail" id="userName" class="block full-width mb1 field-light $!_errorClass" autofocus
                required value="$!{_postBack.primaryEmail}" autocapitalize="none">
            <i class="form-field-icon icon ion-email"></i>
        </div>

        <button type="submit" class="button button-fullwidth button-primary">#message(
            "${_templatePrefix}.view.button")</button>

        <div class="login-actions center py2">
            <a href="$_authUrl">
                #message("authenticator.username-password-authenticator.forgot-account-id.view.cancel")
            </a>
        </div>

    </form>
#end

#parse("layouts/default")
